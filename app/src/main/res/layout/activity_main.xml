<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="50dp"
        android:fontFamily="monospace"
        android:textColor="#236C61"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782" />

    <TextView
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:fontFamily="monospace"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="right"
        android:textSize="33dp"


        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cal"
        app:layout_constraintVertical_bias="0.31" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="#236C61"
        android:backgroundTint="#236C61"
        app:layout_constraintBottom_toBottomOf="@+id/res"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/res" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="#00FFFFFF"
        android:elevation="5dp"
        android:gravity="bottom|center_vertical"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="381dp">

            <Button
                android:id="@+id/c"

                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="C"
                android:textAllCaps="true"
                android:textColor="#236C61"
                android:textSize="20sp"
                android:typeface="normal"
                android:visibility="visible"
                tools:visibility="visible" />

            <Button
                android:id="@+id/bs"

                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="\u232b"
                android:textAllCaps="true"
                android:textColor="#236C61"
                android:textSize="20sp"
                android:typeface="normal" />


            <Button
                android:id="@+id/div"
                android:layout_width="67dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="/"
                android:textAllCaps="true"
                android:textColor="#236C61"
                android:textSize="20sp"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="4"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="429dp">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="1"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="2"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="3"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="x"
                android:textAllCaps="true"
                android:textColor="#236C61"
                android:textSize="20sp"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="4"
            tools:layout_editor_absoluteX="-69dp"
            tools:layout_editor_absoluteY="477dp">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="4"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFE"
                android:fontFamily="monospace"
                android:text="5"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="6"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="-"
                android:textAllCaps="true"
                android:textColor="#236C61"
                android:textSize="20sp"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="4"
            tools:layout_editor_absoluteX="-40dp"
            tools:layout_editor_absoluteY="525dp">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="7"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="8"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="9"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="+"
                android:textAllCaps="true"
                android:textColor="#236C61"
                android:textSize="20sp"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="3"
            tools:layout_editor_absoluteX="-37dp"
            tools:layout_editor_absoluteY="573dp">

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:fontFamily="monospace"
                android:text="."
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp"
                android:typeface="normal" />

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/eq"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="#09213C"
                android:backgroundTint="#236C61"
                android:backgroundTintMode="add"
                android:fontFamily="monospace"
                android:text="="
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:typeface="normal" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>